{
  "name": "users-service",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prestart": "yarn docs",
    "start": "cross-env NODE_ENV=production npx pm2 start ./src/index.js --name user-service",
    "dev": "nodemon ./src/index.js",
    "test:jest": "jest -i --colors --verbose --detectOpenHandles",
    "validate": "yarn lint && yarn test",
    "postpublish": "git push --tags",
    "deploy": "sh ./deploy.sh",
    "docs": "apidoc -i src -o docs",
    "postdocs": "open-cli docs/index.html",
    "prettier": "prettier --check ./src",
    "prettier:fix": "prettier --write ./src",
    "docker:start": "cross-env NODE_ENV=production pm2-docker start ./src/index.js",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --abort-on-container-exit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validation": "^4.1.0",
    "helmet": "^7.1.0",
    "http-status": "^1.7.3",
    "joi": "^17.11.0",
    "method-override": "^3.0.0",
    "mongoose": "^8.0.2",
    "passport": "^0.7.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.1",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "apidoc": "^1.2.0",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "faker": "^5.5.3",
    "jest": "^29.7.0",
    "open-cli": "^7.2.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  }
}
